        <label>Process Order</label>
        <name>Process_Order</name>
        <rejectionActions>
            <action>
                <name>cgcloud__Phase_Released_to_Initial</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>cgcloud__Order__c.cgcloud__Phase__c</field>
            <operation>equals</operation>
            <value>Initial</value>
        </criteriaItems>
        <criteriaItems>
            <field>cgcloud__Order__c.cgcloud__Workflow__c</field>
            <operation>equals</operation>
            <value>Order Workflow</value>
        </criteriaItems>
        <criteriaItems>
            <field>cgcloud__Order__c.cgcloud__Release_Platform__c</field>
            <operation>equals</operation>
            <value>All</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>cgcloud__Phase_Initial_to_Released</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Order Approval Process for Web</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>4</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
